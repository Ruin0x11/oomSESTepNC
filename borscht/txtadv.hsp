*com_txtadv
	begintempinv
	atxthrough = 0
	atxpic = 0
	snd SOUNDLIST_POP3
	mode = MODELIST_TXT_ADV
	atxbg = "bg13"
	atxbgbk = ""
	sdim atxinfon, 80, 5
	redraw 0
	if ( atxid == 2 ) {
		goto *atx_RE
	}
	if ( atxid == 1 ) {
		txt -1, lang("ディーラーに話しかけた。", "You talk to the dealer.")
		music = MUSICLIST_MCCASINO
		gosub *music_play
		locvar_addnews_hide_popup = 2
		goto *adv_casinoCard
	}
	if ( atxid == 4 ) {
		music = MUSICLIST_MCCASINO
		gosub *music_play
		goto *adv_casinoCard
	}
	goto *com_txtAdvQuit

*com_txtadv_loop
	redraw 0
	screenupdate = -1
	gosub *screen_draw
	if ( atxid >= 2 ) {
		txtadvmsgfix = 20 + 116
	}
	repeat noteinfo(0)
		noteget s, cnt
		if ( strmid(s, 0, 1) == "@" ) {
			s(1) = strmid(s, 1, 2)
			s = strmid(s, 3, strlen(s) - 3)
			font lang(cfg_font1, cfg_font2), 16 - en * 2, 0
			color 250, 240, 230
			if ( s(1) == "BL" ) {
				color 130, 130, 250
			}
			if ( s(1) == "GR" ) {
				color 130, 250, 130
			}
			if ( s(1) == "QM" ) {
				color 0, 100, 0
			}
		}
		else {
			font lang(cfg_font1, cfg_font2), 16 - en * 2, 0
			color 250, 240, 230
		}
		pos 170, cnt * 20 + 120 + txtadvmsgfix
		mes s
	loop
	cs_bk = -1
	pagemax = (listmax - 1) / pagesize
	if ( page < 0 ) {
		page = pagemax
	}
	else {
		if ( page > pagemax ) {
			page = 0
		}
	}
	gsel BUFFER_MAP
	gmode 0
	pos 0, 0
	gcopy BUFFER_SCREEN, 0, 0, windoww, windowh
	gsel BUFFER_SCREEN
	gmode 2
	keyrange = 0
	repeat pagesize
		p = pagesize * page + cnt
		if ( p >= listmax ) {
			break
		}
		key_list(cnt) = key_select(cnt)
		keyrange++
	loop
	gosub *com_adv_anime1

*com_txtadv_loop_WHILE1
	redraw 0
	x = 170, 400
	y = noteinfo(0) * 20 + 120 + txtadvmsgfix + 16, 20 * listmax
	gmode 0
	pos x, y
	gcopy BUFFER_MAP, x, y, x(1), y(1)
	gmode 2
	font lang(cfg_font1, cfg_font2), 14 - en * 2, 0
	cs_listbk
	repeat pagesize
		p = pagesize * page + cnt
		if ( p >= listmax ) {
			break
		}
		i = list(0, p)
		display_key 170, noteinfo(0) * 20 + 120 + txtadvmsgfix + 16 + cnt * 20, cnt
		s = listn(0, p)
		cs_list s, 170 + 30, noteinfo(0) * 20 + 120 + txtadvmsgfix + 16 + cnt * 20, 19, 0, 2
	loop
	if ( keyrange != 0 ) {
		cs_bk = cs
	}
	redraw 1
	await cfg_wait1
	key_check
	cursor_check
	rtval = -1
	repeat keyrange
		if ( key == key_select(cnt) ) {
			rtval = list(0, pagesize * page + cnt)
			snd SOUNDLIST_CLICK1
			break
		}
	loop
	if ( chatesc != (-1) ) {
		if ( key == key_cancel ) {
			snd SOUNDLIST_CLICK1
			rtval = chatesc
		}
	}
	if ( rtval != (-1) ) {
		gosub *com_adv_anime2
		atxpic = 0
		return
	}
	if ( key == key_pageup ) {
		if ( pagemax != 0 ) {
			snd SOUNDLIST_POP1
			page++
			goto *com_txtadv_loop
		}
	}
	if ( key == key_pagedown ) {
		if ( pagemax != 0 ) {
			snd SOUNDLIST_POP1
			page--
			goto *com_txtadv_loop
		}
	}
	goto *com_txtadv_loop_WHILE1

*com_adv_anime1
	gosub *com_adv_animeSub
	if ( mattile != (-1) ) {
		mattile = rnd(mattile(2)) + mattile(1)
	}
	repeat 12
		x = 170, 300
		y = noteinfo(0) * 20 + 120 + txtadvmsgfix + 16, 20 * listmax
		redraw 0
		gmode 0
		pos x - 50, y - 50
		gcopy BUFFER_MAP, x - 50, y - 50, 100 + x(1), y(1) + 100
		if ( cnt == 11 ) {
			break
		}
		color 0, 0, 0
		gmode 4, x(1), y(1), cnt * 25
		pos x + x(1) / 2 - 10 + cnt, y + y(1) / 2
		grotate BUFFER_MAP, 0, 0, 0, x(1), y(1)
		if ( atxpic != 0 ) {
			x = 170 + 175, atxpic(2) + 120
			y = 170, atxpic(3)
			gmode 0
			pos x - atxpic(2) / 2, y - atxpic(3) / 2
			gcopy BUFFER_MAP, x - atxpic(2) / 2, y - atxpic(3) / 2, x(1), y(1)
			pos x, y
			gmode 2, inf_tiles, inf_tiles
			if ( cnt == 10 ) {
				p_double = 0
			}
			else {
				p_double = 0.6222 * cnt
			}
			p(1) = 1
			if ( atxpic == 2 ) {
				p(1) = 5
			}
			grotate p(1), atxpic(1) \ 33 * 32, atxpic(1) / 33 * 32, p_double, cnt * (atxpic(2) / 10), cnt * (atxpic(3) / 10)
		}
		if ( mattile != (-1) ) {
			cnt2 = cnt
			repeat 2
				x = cnt * 250 + 170, 96
				y = 120, 96
				gmode 0
				pos x, y
				gcopy BUFFER_MAP, x, y, x(1), y(1)
				pos x + x(1) / 2, y + y(1) / 2
				gmode 2, inf_tiles, inf_tiles
				grotate BUFFER_ITEM, mattile \ 33 * 32, mattile / 33 * 32, 0, cnt2 * (96 / 10), cnt2 * (96 / 10)
			loop
		}
		await 20
		redraw 1
	loop
	gmode 2
	atxpic = 0
	return

